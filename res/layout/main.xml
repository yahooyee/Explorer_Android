        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlURI"
        android:layout_width="fill_parent"
        android:layout_height="26dp"
        android:layout_below="@+id/rlHSV"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/addressbar_bg" >

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" >

            <ImageView
                android:id="@+id/imvFolderLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/addressbar_local" />

            <TextView
                android:id="@+id/tvURI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/imvFolderLocal"
                android:maxLines="1"
                android:text="/sdcard/"
                android:textColor="#000" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imvHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/toolbar_history_bg" />
    </RelativeLayout>

    <GridView
        android:id="@+id/listGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlURI"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:columnWidth="90dp"
        android:listSelector="@drawable/toolbar_inner_focus"
        android:numColumns="3"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:verticalSpacing="10dp" >
    </GridView>

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlURI"
        android:addStatesFromChildren="false"
        android:alwaysDrawnWithCache="true"
        android:cacheColorHint="#00000000"
        android:choiceMode="none"
        android:divider="@null"
        android:dividerHeight="10px"
        android:duplicateParentState="true"
        android:listSelector="#00000000"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
