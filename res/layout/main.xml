                        android:src="@drawable/pastepr" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rlMutil"
                    android:background="@drawable/grass" >

                    <ImageView
                        android:id="@+id/imvManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imvMutil"
                        android:src="@drawable/manager" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rlManager"
                    android:background="@drawable/grass" >

                    <ImageView
