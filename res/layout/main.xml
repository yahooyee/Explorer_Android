                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/toolbar_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlMutil2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rlCut"
                    android:background="@drawable/grass" >

                    <ImageView
                        android:id="@+id/imvMutil2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/toolbar_select_focus" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlCopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rlBack"
                    android:background="@drawable/grass" >

                    <ImageView
                        android:id="@+id/imvCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/toolbar_copy" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlCut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rlCopy"
                    android:background="@drawable/grass" >

                    <ImageView
                        android:id="@+id/imvCut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/toolbar_cut" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPaste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rlMutil2"
                    android:background="@drawable/grass" >

                    <ImageView
                        android:id="@+id/imvPaste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/toolbar_paste" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rlPaste"
                    android:background="@drawable/grass" >

                    <ImageView
                        android:id="@+id/imvDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/toolbar_uninstall" />
                </RelativeLayout>
            </RelativeLayout>
        </HorizontalScrollView>

