<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    <ImageView 
        android:id="@+id/imvItemFolderLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView 
        android:id="@+id/tvItemNameLV"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Nguyen hoang truong"
        android:maxLines="1"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/imvItemFolderLV"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        />
	<TextView 
	    android:id="@+id/tvDateCreate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="26-08-2012"
	    android:textSize="15dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    />
	<TextView 
	    android:id="@+id/tvSize"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="320KB"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@+id/tvDateCreate"
	    android:textSize="15dp"
	    android:layout_marginRight="10dp"/>
</RelativeLayout>