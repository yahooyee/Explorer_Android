<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="6dip" >

    <RelativeLayout
        android:id="@+id/rlSDCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imvSDCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_root" />

        <TextView
            android:id="@+id/tvStorageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2.5Gb"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dip" >

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:maxHeight="50dip"
            android:src="@drawable/folder_snow" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="24dip"
                android:textColor="@color/white"
                android:textSize="18dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/path_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="4dip"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:padding="8dip" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow>

                <TextView
                    android:id="@+id/first_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Number of folders: "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/dirs_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/white" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="8dip" />

            <TableRow>

                <TextView
                    android:id="@+id/second_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Number of files: "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/files_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/white" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="8dip" />

            <TableRow>

                <TextView
                    android:id="@+id/third_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Last Modified: "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/white" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="25dip" />

            <TableRow>

                <TextView
                    android:id="@+id/fourth_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total size: "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/total_size"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/white" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="8dip" />

            <TableRow>

                <TextView
                    android:id="@+id/fifth_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/free_space"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/white" />
            </TableRow>
            <!--
				<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxHeight="8dip"/>
				<TableRow>
					<TextView
						android:id="@+id/sixth_title"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/white"
						android:gravity="center"
						android:text="Used space: "/>
					<TextView
						android:id="@+id/used_space"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/white"
						android:gravity="right"/>
				</TableRow>
            -->
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rlHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grass" >

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />
        </RelativeLayout>

        <Button
            android:id="@+id/zip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip folder" />
    </LinearLayout>

</LinearLayout>